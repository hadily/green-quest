{% extends 'base.html.twig' %}

{% block title %}Complaints{% endblock %}

{% block body %}
    <h1>Complaints</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ complaint.id }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ complaint.subject }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ complaint.details }}</td>
            </tr>
