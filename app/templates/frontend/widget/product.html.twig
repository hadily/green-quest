<!-- Start Blog Style -->
<div class="rbt-rbt-blog-area rbt-section-gap bg-color-white">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="section-title text-center">
					<span class="subtitle bg-secondary-opacity">Produits</span>
					<h2 class="title">Nos produits</h2>
				</div>
			</div>
		</div>
		<!-- Start Card Area -->
		<div class="row g-5 mt--30">
			{% for product in list %}
				<!-- Start Single Card  -->
				<div class="col-lg-4 col-md-6 col-sm-12 col-12 mt--30">
					<div class="rbt-card variation-02 rbt-hover">
						<div class="rbt-card-img">
							<a href="{{ path('frontend_product_detail', {'id': product.id}) }}">
								<img src="{{ asset('uploads/') ~ product.image }}" alt="{{product.title}}">
							</a>
						</div>
						<div class="rbt-card-body">
							<h5 class="rbt-card-title">
								<a href="{{ path('frontend_product_detail', {'id': product.id}) }}">{{product.title}}</a>
							</h5>
							<p class="rbt-card-text">I{{product.description}}</p>
							<div class="rbt-card-bottom">
								<a class="transparent-button" href="{{ path('frontend_product_detail', {'id': product.id}) }}">Voir d√©tails<i>
										<svg width="17" height="12" xmlns="http://www.w3.org/2000/svg">
											<g stroke="#27374D" fill="none" fill-rule="evenodd">
												<path d="M10.614 0l5.629 5.629-5.63 5.629"/>
												<path stroke-linecap="square" d="M.663 5.572h14.594"/>
											</g>
										</svg>
									</i>
								</a>
							</div>
						</div>
					</div>
				</div>
				<!-- End Single Card  -->
			{% endfor %}
		</div>
		<!-- End Card Area -->

		<div class="row">
			<div class="col-lg-12">
				<div class="load-more-btn mt--60 text-center">
					<a class="rbt-btn rbt-marquee-btn" href="{{path('frontend_product_list')}}">
						<span data-text="Voir tous les produits">
							Voir tous les produits
						</span>
					</a>
				</div>
			</div>
		</div>

	</div>
</div>
<!-- End Blog Style -->

